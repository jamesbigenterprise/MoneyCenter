<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MoneyCenter.ViewModel"
             x:Class="MoneyCenter.MainView"
             Title="Financial Dashboard">

    <ContentPage.BindingContext>
        <viewmodel:MainViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Tabs for Desktop -->
        <Grid Grid.Row="0" IsVisible="{Binding IsDesktop}">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="Dashboard" Command="{Binding NavigateCommand}" CommandParameter="dashboard" 
                        BackgroundColor="{Binding ActiveView, Converter={StaticResource ActiveTabConverter}, ConverterParameter=dashboard}" />
                <Button Text="Expenses" Command="{Binding NavigateCommand}" CommandParameter="expenses"
                        BackgroundColor="{Binding ActiveView, Converter={StaticResource ActiveTabConverter}, ConverterParameter=expenses}" />
                <Button Text="Savings" Command="{Binding NavigateCommand}" CommandParameter="savings"
                        BackgroundColor="{Binding ActiveView, Converter={StaticResource ActiveTabConverter}, ConverterParameter=savings}" />
                <Button Text="Budgets" Command="{Binding NavigateCommand}" CommandParameter="budgets"
                        BackgroundColor="{Binding ActiveView, Converter={StaticResource ActiveTabConverter}, ConverterParameter=budgets}" />
                <Button Text="Settings" Command="{Binding NavigateCommand}" CommandParameter="settings"
                        BackgroundColor="{Binding ActiveView, Converter={StaticResource ActiveTabConverter}, ConverterParameter=settings}" />
            </HorizontalStackLayout>
        </Grid>

        <!-- Main Content -->
        <Border Grid.Row="1" Margin="10" StrokeThickness="1" Padding="15">
            <ContentView x:Name="MainContent">
                <ContentView.Content>
                    <!-- This will be populated by the current view -->
                </ContentView.Content>
            </ContentView>
        </Border>

        <!-- Bottom Navigation for Mobile -->
        <Grid Grid.Row="2" IsVisible="{Binding IsMobile}" BackgroundColor="LightGray" HeightRequest="60">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" VerticalOptions="Center">
                <ImageButton Source="dashboard_icon.png" Command="{Binding NavigateCommand}" CommandParameter="dashboard" />
                <ImageButton Source="expenses_icon.png" Command="{Binding NavigateCommand}" CommandParameter="expenses" />
                <ImageButton Source="savings_icon.png" Command="{Binding NavigateCommand}" CommandParameter="savings" />
                <ImageButton Source="budgets_icon.png" Command="{Binding NavigateCommand}" CommandParameter="budgets" />
                <ImageButton Source="settings_icon.png" Command="{Binding NavigateCommand}" CommandParameter="settings" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
