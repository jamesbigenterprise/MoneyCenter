<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MoneyCenter.ViewModel"
             x:Class="MoneyCenter.Views.BudgetsView">

    <VerticalStackLayout Padding="16" Spacing="16">
        <Label Text="Budgets" FontSize="24" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding Budgets}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="8" Padding="8" Margin="0,8,0,0">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Description}" FontSize="14" TextColor="Gray"/>
                            <Label Text="Categories:" FontAttributes="Bold" Margin="0,8,0,0"/>
                            <CollectionView ItemsSource="{Binding Categories}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="*,*,Auto" Padding="4">
                                            <Label Text="{Binding Name}" />
                                            <Label Text="{Binding Amount, StringFormat='${0:F2}'}" Grid.Column="1"/>
                                            <Label Text="{Binding Type}" Grid.Column="2"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
