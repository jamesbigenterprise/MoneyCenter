<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MoneyCenter.ViewModel"
             x:Class="MoneyCenter.Views.SettingsView">

    <VerticalStackLayout Padding="16" Spacing="16">
        <Label Text="Settings" FontSize="24" FontAttributes="Bold" />
        <Label Text="(Settings functionality placeholder)" FontSize="16" TextColor="Gray"/>
        <Button Text="Export Data" Command="{Binding ExportDataCommand}" />
        <Button Text="Import Data" Command="{Binding ImportDataCommand}" />
    </VerticalStackLayout>
</ContentView>
