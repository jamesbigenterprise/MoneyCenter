<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyCenter.Views.PermissionsPage"
             Title="Permissions">
    <StackLayout Padding="40" VerticalOptions="Center">
        <Label Text="Permissions Step" FontSize="32" HorizontalOptions="Center"/>
        <Label Text="(No permissions needed for now)" FontSize="18" HorizontalOptions="Center"/>
        <Button Text="Finish Setup" Command="{Binding FinishSetupCommand}" VerticalOptions="End" Margin="40"/>
    </StackLayout>
</ContentPage>