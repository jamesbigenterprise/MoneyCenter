<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyCenter.Views.WelcomePage"
             Title="Welcome">
    <StackLayout>
        <CarouselView x:Name="carousel" ItemsSource="{Binding Pages}">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="40" VerticalOptions="Center">
                        <Label Text="{Binding Title}" FontSize="32" HorizontalOptions="Center"/>
                        <Label Text="{Binding Description}" FontSize="18" HorizontalOptions="Center"/>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <Button Text="Continue" Command="{Binding ContinueCommand}" VerticalOptions="End" Margin="40"/>
    </StackLayout>
</ContentPage>